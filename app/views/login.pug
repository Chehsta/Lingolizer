doctype html
html
  head
    title Lingolizer
    link(rel="stylesheet", href="../css/styles.css")
    script(src="/js/login.js")
  body
    h1.heading LINGOLIZER

    .login-container
      form#login-form.login-box
        
        p.subheading  Log-In

        input(type="text", id="email", name="email", placeholder="Email address" required=true)

        input(type="password", id="password", name="password", placeholder="Password", required=true)

        button(type="submit") Log-In
    p#login-message.message

    
