doctype html
html
  head
    title Lingolizer - Register
    link(rel="stylesheet", href="../css/styles.css")
    script(src="/js/register.js")
  body
    h1.heading LINGOLIZER

    .login-container
      form#register-form.register-box

        p.subheading Create your account

        input(type="text", id="name", name="name", placeholder="Username", required)

        input(type="email", id="email", name="email", placeholder="Email address", required)

        input(type="password", id="password", name="password", placeholder="Password", required)

        select(id="role", name="role", required)
          option(value="" disabled selected hidden) Select role
          option(value="learner") Learner
          option(value="teacher") Teacher
          option(value="admin") Admin

        input(type="text", id="native_language", name="native_language", placeholder="Native Language", required)

        input(type="text", id="learning_language", name="learning_language", placeholder="Learning Language", required)

        button(type="submit") Register

    p#register-message.message
